---
import imageSrc from '../../assets/Section.png'; // Asegúrate de que la imagen está en la carpeta 'assets'
---

<style>
  .educacion-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 25px 20px;
    padding-top: 75px;
    min-height: auto;
  }

  .educacion-section h2 {
    font-size: 2rem;
    color: #7d3c98; /* Morado */
    margin-bottom: 10px;
    font-weight: bold;
    max-width: 90%;
  }

  .educacion-section p {
    font-size: 1.2rem;
    color: #4a4a4a;
    margin-bottom: 30px;
    max-width: 80%;
  }

  .educacion-buttons {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 15px;
    margin-bottom: 30px;
    width: 100%;
    max-width: 550px;
  }

  .educacion-buttons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: 220px;
    padding: 12px;
    border: 2px solid #1d1d1d;
    border-radius: 8px;
    text-decoration: none;
    color: #1d1d1d;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .educacion-buttons a:hover {
    background: #1d1d1d;
    color: white;
  }

  .educacion-buttons a::after {
    content: '↗'; /* Flecha */
    margin-left: 8px;
    font-size: 1rem;
  }

  .educacion-image {
    width: 90%;
    max-width: 800px;
    border-radius: 12px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .educacion-section {
      padding: 30px 15px;
      padding-top: 70px;
    }

    .educacion-section h2 {
      font-size: 1.8rem;
    }

    .educacion-section p {
      font-size: 1rem;
    }

    .educacion-buttons {
      flex-direction: column;
      align-items: center;
    }

    .educacion-buttons a {
      width: 90%;
      max-width: 300px;
    }

    .educacion-image {
      width: 100%;
      max-width: 600px;
    }
  }
</style>

<section class="educacion-section">
  <h2>EL CONOCIMIENTO TE IMPULSA<br>LA INNOVACIÓN TE DEFINE</h2>
  <p>Educación de vanguardia para transformar la salud mental</p>
  
  <div class="educacion-buttons">
    <a href="#">WEBINAR</a>
    <a href="/Cursos/">CURSOS PRESENCIALES</a>
    <a href="/Diplomados/">DIPLOMADOS</a>
  </div>

  <img src={imageSrc.src} alt="Conferencia" class="educacion-image" />
</section>
