  title: string;
  specialty: string;
  description: string;
  image: string;
  linkedin?: string;
}

const professionals: Professional[] = [
  {
    name: "Dr. Gabriel Villafuerte Jiménez",
    title: "Médico e investigador en neurociencias",
    specialty: "",
    description: "Doctor en neurociencias, cofundador y director científico de Actipulse Neuroscience, donde desarrolla dispositivos médicos de estimulación cerebral no invasiva. Investiga la relación mente-cerebro y tratamientos neurológicos con estas técnicas.",
